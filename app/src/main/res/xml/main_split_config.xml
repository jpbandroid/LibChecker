<!-- The split configuration for activities. -->
<resources
  xmlns:window="http://schemas.android.com/apk/res-auto">

  <!-- Automatically split the following activity pairs. -->
  <SplitPairRule
    window:splitRatio="0.3"
    window:splitMinWidth="600dp"
    window:finishPrimaryWithSecondary="true"
    window:finishSecondaryWithPrimary="true"
    window:clearTop="true">
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.MainActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.detail.AppDetailActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.MainActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.main.LibReferenceActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.MainActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.main.ChartActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.MainActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.detail.SnapshotDetailActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.MainActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.about.AboutActivity" />

    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.main.LibReferenceActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.detail.AppDetailActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.detail.SnapshotDetailActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.detail.AppDetailActivity" />

    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.snapshot.AlbumActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.album.BackupActivity" />
    <SplitPairFilter
      window:primaryActivityName="com.jpb.libchecker.ui.snapshot.AlbumActivity"
      window:secondaryActivityName="com.jpb.libchecker.ui.album.TrackActivity" />
  </SplitPairRule>

</resources>
